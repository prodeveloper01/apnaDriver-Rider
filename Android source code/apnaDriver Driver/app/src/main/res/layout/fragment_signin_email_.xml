<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/ColorBackground"
    tools:context=".activitiesandfragments.accounts.signInfragment.SigninEmailF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:background="@drawable/d_bottom_gray_line"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_34sdp"
                        android:includeFontPadding="false"
                        android:hint="@string/email_username"
                        android:text=""
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:background="@null"
                        android:textColor="@color/ColorBlack"
                        android:textColorHint="@color/ColorSemiDarkGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:fontFamily="@font/airbnbcerealmedium"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:textAlignment="viewStart"
                        />


                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:background="@drawable/d_bottom_gray_line"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp">


                <ImageView
                    android:scaleType="fitEnd"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:id="@+id/iv_password"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:tint="@color/ColorBlack"
                    app:srcCompat="@drawable/ic_hide"
                    />

                <RelativeLayout
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/iv_password"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">

                        <EditText
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:importantForAutofill="no"
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/airbnbcerealmedium"
                            android:gravity="center_vertical"
                            android:hint="@string/password"
                            android:includeFontPadding="false"
                            android:inputType="textPassword"
                            android:text=""
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@null"
                            android:textColor="@color/ColorBlack"
                            android:textColorHint="@color/ColorSemiDarkGray"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="RtlCompat"
                            android:textAlignment="viewStart"
                            android:textStyle="normal" />


                    </LinearLayout>



                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_forgot_password"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/forgot_password_"
                android:textColor="@color/ColorBlack"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal"
                android:fontFamily="@font/airbnbcerealmedium"
                android:gravity="center_vertical"
                />




            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/btn_send_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:gravity="center"
                android:background="@drawable/ractengle_less_round_solid_black"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAllCaps="false"
                    android:text="@string/login"
                    android:textColor="@color/ColorWhite"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal"
                    android:fontFamily="@font/airbnbcerealmedium"
                    android:gravity="center"
                    />


            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>

</FrameLayout>