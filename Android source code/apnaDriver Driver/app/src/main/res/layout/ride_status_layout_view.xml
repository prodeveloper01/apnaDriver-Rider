<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/captain_rkl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="true"

    android:focusable="true"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:layout_collapseMode="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/btn_status_change"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/ractengle_less_round_solid_black"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_status_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/airbnbcerealmedium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/arrived_for_pickup"
                android:textAllCaps="false"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/first_step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/d_round_top_corners"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/d_round_corner_gray" />


            <LinearLayout
                android:id="@+id/tab_step_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:id="@+id/tv_ride_with_you"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/airbnbcerealmedium"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text=""
                    android:textColor="@color/ColorBlue"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp">


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/img_customer"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        app:roundingBorderColor="@color/ColorWhite"
                        app:roundingBorderWidth="@dimen/_2sdp"
                        app:roundTopStart="true"
                        app:roundTopEnd="true"
                        app:roundBottomEnd="false"
                        app:roundBottomStart="false"
                        app:roundedCornerRadius="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        app:placeholderImage="@drawable/image_placeholder"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toStartOf="@+id/right_profile_view"
                        android:layout_toEndOf="@+id/img_customer">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_customer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/airbnbcerealmedium"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:text=""
                                android:textColor="@color/ColorBlack"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_customer_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/airbnbcerealmedium"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:text=""
                                android:textColor="@color/ColorSemiDarkGray"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />


                        </LinearLayout>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/right_profile_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_estimated_fare"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/airbnbcerealmedium"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:text=""
                                android:textColor="@color/ColorBlack"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_estimated_distence"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/airbnbcerealmedium"
                                android:gravity="center_vertical|end"
                                android:includeFontPadding="false"
                                android:text=""
                                android:textAlignment="viewEnd"
                                android:textColor="@color/ColorSemiDarkGray"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="normal" />


                        </LinearLayout>


                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/tab_rl_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:id="@+id/view_left"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_22sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_pickup"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:background="@drawable/ic_circle_stroke"
                            android:scaleType="fitStart" />


                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/ColorDarkGray"
                            android:gravity="center" />


                        <ImageView
                            android:id="@+id/iv_dropoff"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:scaleType="fitStart"
                            app:srcCompat="@drawable/ic_location_pin" />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/view_left">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/airbnbcerealmedium"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:text="@string/pickup_location"
                                    android:textColor="@color/ColorDarkGray"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="normal" />


                                <TextView
                                    android:id="@+id/tv_pickup_loc_detail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/airbnbcerealmedium"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:text=""
                                    android:textColor="@color/ColorBlack"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_25sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/airbnbcerealmedium"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:text="@string/dropoff_location"
                                    android:textColor="@color/ColorDarkGray"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="normal" />


                                <TextView
                                    android:id="@+id/tv_dropoff_loc_detail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/airbnbcerealmedium"
                                    android:gravity="center_vertical"
                                    android:includeFontPadding="false"
                                    android:text=""
                                    android:textColor="@color/ColorBlack"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="normal" />

                            </LinearLayout>


                        </LinearLayout>


                    </RelativeLayout>


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/tab_rl_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/btn_decline"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginStart="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/ractengle_less_round_stroke_primary"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/airbnbcerealmedium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/decline"
                            android:textAllCaps="false"
                            android:textColor="@color/ColorBlack"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/btn_accept"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_40sdp"
                        android:layout_weight="1"
                        android:background="@drawable/ractengle_less_round_solid_black"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/airbnbcerealmedium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/accept"
                            android:textAllCaps="false"
                            android:textColor="@color/ColorWhite"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/tab_rl_send_msg_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="6">

                    <LinearLayout
                        android:id="@+id/btn_chat"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="5"
                        android:background="@drawable/ractengle_less_round_solid_black"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/airbnbcerealmedium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/send_message"
                            android:textAllCaps="false"
                            android:textColor="@color/ColorWhite"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/btn_call"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:background="@drawable/ractengle_less_round_stroke_gray"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            app:srcCompat="@drawable/ic_call" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/tab_step_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/airbnbcerealmedium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="@string/congrats_booking_confirm"
                    android:textColor="@color/ColorBlack"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/airbnbcerealmedium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="@string/you_have_to_arrive_at"
                    android:textColor="@color/ColorSemiDarkGray"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/step_two_tv_pickup_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/airbnbcerealmedium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text=""
                    android:textColor="@color/ColorBlack"
                    android:textSize="@dimen/_28sdp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/airbnbcerealmedium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="@string/pickup_location_"
                    android:textColor="@color/ColorSemiDarkGray"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/step_two_tv_pickup_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/airbnbcerealmedium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text=""
                    android:textColor="@color/ColorBlack"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/btn_start_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:background="@drawable/ractengle_less_round_solid_black"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/airbnbcerealmedium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/start_navigation"
                        android:textAllCaps="false"
                        android:textColor="@color/ColorWhite"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</FrameLayout>