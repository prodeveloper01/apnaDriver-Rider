<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/ColorBackground"
    android:id="@+id/upload_document_container"
    tools:context=".activitiesandfragments.documentfragment.UploadDocumentF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/iv_back"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_24sdp"
                android:tint="@color/ColorBlack"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_arrow_left"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/ColorBlack"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal"
                android:fontFamily="@font/airbnbcerealmedium"
                android:gravity="center"
                />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_86sdp"
                    app:srcCompat="@drawable/ic_doc_card"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">


                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textAllCaps="false"
                            android:text="@string/uplaod_document"
                            android:textColor="@color/ColorBlack"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:singleLine="true"
                            android:fontFamily="@font/airbnbcerealmedium"
                            android:gravity="center_vertical"
                            />


                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textAllCaps="false"
                            android:text="@string/we_need_to_see_your_name_clearly"
                            android:textColor="@color/ColorDarkGray"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:fontFamily="@font/airbnbcerealmedium"
                            android:gravity="center_vertical"
                            />


                    </LinearLayout>



                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/ll_driving_license">


                <ImageView
                    android:scaleType="fitEnd"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:id="@+id/iv_driving_license"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:tint="@color/ColorDarkGray"
                    app:srcCompat="@drawable/ic_arrow_right"
                    />

                <RelativeLayout
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/iv_driving_license"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textAllCaps="false"
                            android:text="@string/driving_license"
                            android:textColor="@color/ColorBlack"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:singleLine="true"
                            android:fontFamily="@font/airbnbcerealmedium"
                            android:gravity="center_vertical"
                            />


                    </LinearLayout>



                </RelativeLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/ColorSemiDarkGray"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/ll_vehicle_insurance">


                <ImageView
                    android:scaleType="fitEnd"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:id="@+id/iv_vehicle_insurance"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:tint="@color/ColorDarkGray"
                    app:srcCompat="@drawable/ic_arrow_right"
                    />

                <RelativeLayout
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/iv_vehicle_insurance"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textAllCaps="false"
                            android:text="@string/vehicle_insurance"
                            android:textColor="@color/ColorBlack"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:singleLine="true"
                            android:fontFamily="@font/airbnbcerealmedium"
                            android:gravity="center_vertical"
                            />


                    </LinearLayout>



                </RelativeLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/ColorSemiDarkGray"/>


            <RelativeLayout
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/ll_vehicle_registration">


                <ImageView
                    android:scaleType="fitEnd"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:id="@+id/iv_vehicle_registration"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:tint="@color/ColorDarkGray"
                    app:srcCompat="@drawable/ic_arrow_right"
                    />

                <RelativeLayout
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/iv_vehicle_registration"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textAllCaps="false"
                            android:text="@string/vehicle_registration"
                            android:textColor="@color/ColorBlack"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:singleLine="true"
                            android:fontFamily="@font/airbnbcerealmedium"
                            android:gravity="center_vertical"
                            />


                    </LinearLayout>



                </RelativeLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/ColorSemiDarkGray"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/ll_cnic">


                <ImageView
                    android:scaleType="fitEnd"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:id="@+id/iv_cnic"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:tint="@color/ColorDarkGray"
                    app:srcCompat="@drawable/ic_arrow_right"
                    />

                <RelativeLayout
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/iv_cnic"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|start"
                        android:orientation="vertical"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textAllCaps="false"
                            android:text="@string/national_id_passport"
                            android:textColor="@color/ColorBlack"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal"
                            android:singleLine="true"
                            android:fontFamily="@font/airbnbcerealmedium"
                            android:gravity="center_vertical"
                            />


                    </LinearLayout>



                </RelativeLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/ColorSemiDarkGray"/>




        </LinearLayout>

    </RelativeLayout>

</FrameLayout>