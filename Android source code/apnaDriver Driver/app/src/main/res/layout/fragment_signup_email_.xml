<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ColorBackground"
    android:clickable="true"
    android:focusable="true"
    tools:context=".activitiesandfragments.accounts.signupfragment.SignupEmailF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/iv_back"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_24sdp"
                android:tint="@color/ColorBlack"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_arrow_left"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:includeFontPadding="false"
                android:text="@string/signup"
                android:textColor="@color/ColorBlack"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal"
                android:fontFamily="@font/airbnbcerealmedium"
                android:gravity="center"
                />




        </RelativeLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_marginTop="@dimen/_40sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/what_your_emai"
                    android:textColor="@color/ColorBlack"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal"
                    android:fontFamily="@font/airbnbcerealmedium"
                    android:gravity="center_vertical"
                    />




            </LinearLayout>

            <LinearLayout
                android:background="@drawable/d_bottom_gray_line"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_34sdp"
                        android:includeFontPadding="false"
                        android:hint="@string/dummy_email"
                        android:text=""
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:background="@null"
                        android:textColor="@color/ColorBlack"
                        android:textColorHint="@color/ColorSemiDarkGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:fontFamily="@font/airbnbcerealmedium"
                        android:gravity="center_vertical"
                        tools:ignore="RtlCompat"
                        android:textAlignment="viewStart"
                        />


                </LinearLayout>

            </LinearLayout>




            <TextView
                android:id="@+id/tv_terms_condition"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/terms_and_condition_detail"
                android:textColor="@color/ColorDarkGray"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal"
                android:gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/airbnbcerealmedium"
                />




            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:id="@+id/btn_send_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:gravity="center"
                android:background="@drawable/ractengle_less_round_solid_black"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textAllCaps="false"
                    android:text="@string/next"
                    android:textColor="@color/ColorWhite"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal"
                    android:fontFamily="@font/airbnbcerealmedium"
                    android:gravity="center"
                    />


            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>

</FrameLayout>