<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wallet_container"
    android:clickable="true"
    tools:context=".activitiesandfragments.walletfragment.WalletF"
    android:background="@color/ColorBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/iv_nav_menu"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_24sdp"
                android:tint="@color/ColorBlack"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_nav_menu"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:includeFontPadding="false"
                android:text="@string/wallet"
                android:textColor="@color/ColorBlack"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal"
                android:fontFamily="@font/airbnbcerealmedium"
                android:gravity="center"
                />




        </RelativeLayout>





        <com.loopeer.shadow.ShadowView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="@dimen/_27sdp"
            android:layout_marginEnd="@dimen/_27sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:elevation="@dimen/_8sdp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="10dp"
            app:cornerRadius="@dimen/_4sdp"
            app:shadowMargin="@dimen/_8sdp"
            app:shadowRadius="@dimen/_8sdp">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textAllCaps="false"
                        android:text="@string/current_balance"
                        android:textColor="@color/ColorBlack"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="normal"
                        android:singleLine="true"
                        android:fontFamily="@font/airbnbcerealmedium"
                        android:gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/tv_current_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textAllCaps="false"
                        android:text=""
                        android:maxLines="2"
                        android:textColor="@color/ColorBlack"
                        android:textSize="@dimen/_42sdp"
                        android:textStyle="normal"
                        android:ellipsize="end"
                        android:fontFamily="@font/airbnbcerealmedium"
                        android:gravity="center"
                        />


                </LinearLayout>

            </RelativeLayout>


        </com.loopeer.shadow.ShadowView>


        <LinearLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:id="@+id/btn_withdraw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:gravity="center"
            android:background="@drawable/ractengle_less_round_solid_black"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text="@string/withdraw"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal"
                android:fontFamily="@font/airbnbcerealmedium"
                android:gravity="center"
                />


        </LinearLayout>

    </RelativeLayout>







</FrameLayout>