<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorWhite"
    android:clickable="true"
    tools:context=".activitiesandfragments.rideandrequest.RideCompletePaymentF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_24sdp"
                app:srcCompat="@drawable/ic_arrow_left"
                app:tint="@color/ColorBlack" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:fontFamily="@font/airbnbcerealmedium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/ColorBlack"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />


        </RelativeLayout>

        <com.loopeer.shadow.ShadowView
            android:id="@+id/collect_cash_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:elevation="@dimen/_8sdp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="10dp"
            app:cornerRadius="@dimen/_4sdp"
            app:shadowMargin="@dimen/_8sdp"
            app:shadowRadius="@dimen/_8sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/ractengle_less_round_solid_white">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="Collect Cash"
                        android:textAllCaps="false"
                        android:textColor="@color/ColorBlack"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="from username"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="Amount Collected"
                            android:textAllCaps="false"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_final_fare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:singleLine="true"
                            android:text="$0"
                            android:textAllCaps="false"
                            android:textColor="@color/ColorBlack"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:text="Ride Total Fare"
                                android:textAllCaps="false"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_fare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:text="$0"
                                android:textAllCaps="false"
                                android:textColor="@color/ColorBlack"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="normal" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:text="Payment through Wallet"
                                android:textAllCaps="false"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_wallet_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:text="$0"
                                android:textAllCaps="false"
                                android:textColor="@color/ColorBlack"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="normal" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:text="Collect ammount"
                                android:textAllCaps="false"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_final_fare2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:includeFontPadding="false"
                                android:text="$0"
                                android:textAllCaps="false"
                                android:textColor="@color/ColorBlack"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="normal" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </com.loopeer.shadow.ShadowView>


        <com.loopeer.shadow.ShadowView
            android:id="@+id/enter_amount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collect_cash_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:elevation="@dimen/_8sdp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="5dp"
            app:cornerRadius="@dimen/_4sdp"
            app:shadowMargin="@dimen/_8sdp"
            app:shadowRadius="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/signed_text"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:hint="enter amount"
                        android:inputType="phone"
                        android:textAlignment="viewStart"
                        android:textColor="@color/ColorBlack"
                        android:textColorHint="@color/dark_gray"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="Enter amount collected"
                        android:textAllCaps="false"
                        android:textColor="@color/ColorBlack"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="normal" />

                </LinearLayout>


            </LinearLayout>

        </com.loopeer.shadow.ShadowView>

        <LinearLayout
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:layout_below="@+id/enter_amount_layout"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/ractengle_less_round_solid_black"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal" />


        </LinearLayout>

    </RelativeLayout>


</FrameLayout>